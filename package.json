{
  "name": "mouji",
  "version": "1.0.1",
  "description": "Performs a random mouse action on an interval to avoid screen lock.",
  "main": "src/index.js",
  "bin": {
    "mouji": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "start": "ts-node src/index.ts",
    "prepare": "husky install",
    "format": "prettier --check **/*.{ts,json}",
    "format:fix": "prettier --write **/*.{ts,json}",
    "eslint": "eslint --ext .ts .",
    "eslint:fix": "eslint --ext .ts . --fix",
    "lint": "npm run format && npm run eslint",
    "lint:fix": "npm run format:fix && npm run eslint:fix"
  },
  "keywords": [
    "mouse",
    "jiggle",
    "jiggler",
    "jitter",
    "jitterer",
    "shake",
    "present",
    "presentation",
    "lock",
    "screen",
    "screen-lock"
  ],
  "author": "Johnny Reina <johnny.r.reina@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^10.0.0",
    "joi": "^17.9.1",
    "robotjs": "^0.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jreina/mouji"
  },
  "homepage": "https://github.com/jreina/mouji#mouji",
  "bugs": {
    "url": "https://github.com/jreina/mouji/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
